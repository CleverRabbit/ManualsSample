<p id="notice"><%= notice %></p>

<h1>Listing Routers</h1>

<table>
  <thead>
    <tr>
      <th>About</th>
      <th>About lnk</th>
      <th>Connection</th>
      <th>Connection lnk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routers.each do |router| %>
      <tr>
        <td><%= router.about %></td>
        <td><%= router.about_lnk %></td>
        <td><%= router.connection %></td>
        <td><%= router.connection_lnk %></td>
        <td><%= link_to 'Show', router %></td>
        <td><%= link_to 'Edit', edit_router_path(router) %></td>
        <td><%= link_to 'Destroy', router, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

